{
  "name": "choice-story-web",
  "version": "1.0.2",
  "private": true,
  "engines": {
    "node": "22"
  },
  "scripts": {
    "dev": "NEXT_PUBLIC_APP_ENV=development NODE_OPTIONS='--no-warnings' next dev",
    "devprod": "NEXT_PUBLIC_APP_ENV=production NODE_ENV=production NODE_OPTIONS='--no-warnings' next dev",
    "build": "NODE_OPTIONS='--no-warnings' next build",
    "start": "NODE_OPTIONS='--no-warnings' next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "ci:check": "npm run lint && npx tsc --noEmit && npm run build",
    "prod:build": "next build",
    "prod:start": "next start",
    "prod": "npm run prod:build && npm run prod:start",
    "deploy:prod": "firebase use choicestory-b3135 && npm run build && npm run deploy:prod:functions && firebase deploy --only hosting:production",
    "deploy:prod:hosting": "bash scripts/deploy-production-hosting.sh",
    "deploy:prod:functions": "firebase use choicestory-b3135 && cd functions && bash scripts/deploy-production.sh",
    "deploy:staging": "firebase use choicestory-b3135 && npm run build && npm run deploy:staging:functions && firebase deploy --only hosting:staging",
    "deploy:staging:hosting": "bash scripts/deploy-staging-hosting.sh",
    "deploy:staging:functions": "firebase use choicestory-b3135 && cd functions && bash scripts/deploy-staging.sh",
    "verify:firebase": "node firebase-config-verification.js",
    "verify:env": "node verify-dev-environment.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@paypal/react-paypal-js": "^8.8.2",
    "@radix-ui/react-dialog": "1.1.1",
    "@radix-ui/react-label": "2.1.0",
    "@radix-ui/react-radio-group": "1.2.0",
    "@radix-ui/react-select": "2.1.1",
    "@radix-ui/react-separator": "1.1.0",
    "@radix-ui/react-slot": "1.1.0",
    "@radix-ui/react-tabs": "1.1.0",
    "@radix-ui/react-toast": "1.2.1",
    "@radix-ui/react-toggle": "1.1.0",
    "@radix-ui/react-toggle-group": "1.1.0",
    "@sentry/nextjs": "^10.0.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "11.0.2",
    "firebase-admin": "13.0.1",
    "firebase-functions": "^6.3.2",
    "framer-motion": "^12.4.7",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.461.0",
    "next": "15.5.7",
    "openai": "^5.6.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.5.3",
    "react-intersection-observer": "^9.16.0",
    "replicate": "^1.0.1",
    "sharp": "^0.33.5",
    "swagger-ui-dist": "^5.22.0",
    "swagger-ui-react": "^5.22.0",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.3.1",
    "typescript": "5.9.3"
  }
}
