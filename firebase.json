{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json",
    "database": "choice-story-db"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "staging",
      "source": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/.git/**",
        "**/README.md",
        "**/LICENSE",
        "**/.next/cache/**",
        "**/coverage/**",
        "**/test/**",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.spec.*",
        "**/jest.config.*",
        "**/cypress/**",
        "**/e2e/**",
        "**/.env*",
        "**/tsconfig.json",
        "**/jsconfig.json",
        "**/package-lock.json",
        "**/yarn.lock",
        "**/pnpm-lock.yaml"
      ],
      "frameworksBackend": {
        "region": "us-central1"
      }
    },
    {
      "target": "production",
      "source": ".",
      "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.git/**",
      "**/README.md",
      "**/LICENSE",
      "**/.next/cache/**",
      "**/coverage/**",
      "**/test/**",
      "**/__tests__/**",
      "**/*.test.*",
      "**/*.spec.*",
      "**/jest.config.*",
      "**/cypress/**",
      "**/e2e/**",
      "**/.env*",
      "**/tsconfig.json",
      "**/jsconfig.json",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/pnpm-lock.yaml"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
