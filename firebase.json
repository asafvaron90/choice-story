{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json",
    "database": "choice-story-db"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "staging",
      "source": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/.git/**",
        "**/README.md",
        "**/LICENSE",
        "**/.next/cache/**",
        "**/coverage/**",
        "**/test/**",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.spec.*",
        "**/jest.config.*",
        "**/cypress/**",
        "**/e2e/**",
        "**/.env.local",
        "**/.env.development",
        "**/.env.test",
        "**/tsconfig.json",
        "**/jsconfig.json",
        "**/package-lock.json",
        "**/yarn.lock",
        "**/pnpm-lock.yaml"
      ],
      "cleanUrls": true,
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|woff|woff2|ttf|otf)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "_next/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        }
      ],
      "frameworksBackend": {
        "region": "us-central1",
        "memory": "4GiB",
        "cpu": 2,
        "minInstances": 0,
        "maxInstances": 10,
        "concurrency": 80
      }
    },
    {
      "target": "production",
      "source": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/.git/**",
        "**/README.md",
        "**/LICENSE",
        "**/.next/cache/**",
        "**/coverage/**",
        "**/test/**",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.spec.*",
        "**/jest.config.*",
        "**/cypress/**",
        "**/e2e/**",
        "**/.env.local",
        "**/.env.development",
        "**/.env.test",
        "**/tsconfig.json",
        "**/jsconfig.json",
        "**/package-lock.json",
        "**/yarn.lock",
        "**/pnpm-lock.yaml"
      ],
      "cleanUrls": true,
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|woff|woff2|ttf|otf)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "_next/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        }
      ],
      "frameworksBackend": {
        "region": "us-central1",
        "memory": "4GiB",
        "cpu": 2,
        "minInstances": 0,
        "maxInstances": 10,
        "concurrency": 80
      }
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}