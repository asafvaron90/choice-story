{
  "name": "functions",
  "scripts": {
    "sync:constants": "ts-node scripts/sync-constants.ts",
    "generate:dev-functions": "ts-node scripts/generate-dev-functions.ts",
    "deploy:staging-functions": "npm run generate:dev-functions && ./scripts/deploy-staging.sh",
    "deploy:production-functions": "./scripts/deploy-production.sh",
    "build": "npm run sync:constants && npm run generate:dev-functions && tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.2",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
