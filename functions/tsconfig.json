{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "lib/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}

